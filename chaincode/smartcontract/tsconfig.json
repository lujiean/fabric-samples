{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build/dist",
    "baseUrl": ".",
    "lib": ["es2015"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "noUnusedLocals": true,
    "types": [
      "@theledger/fabric-shim-types"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
